HLS_CATAPULT ?= 1
ifeq ($(HLS_CATAPULT),1)
	export HLS_CATAPULT=1
endif

export FSDB_VCS_RD_SC_VALPTR_PROTECT=1
hls:
	catapult -shell -product ultra -file go_hls.tcl

.PHONY: clean
clean:
	/bin/rm -rf ./catapult_cache
	/bin/rm -rf ./*~
	/bin/rm -rf ./*.key
	/bin/rm -rf ./core*
	/bin/rm -rf ./Catapult*
	/bin/rm -rf ./catapult*
	/bin/rm -rf ./*.log

